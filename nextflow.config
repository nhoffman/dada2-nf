// these values supersede params in the profile and are themselves
// superseded by contents of -params-file
params {
    image = 'dada2-nf:v1.13-26-g8cf2c23'
    docker_container = "quay.io/nhoffman/$params.image"
    singularity_container = "library://nhoffman/dada2-nf/$params.image"
    min_reads = 1
}

// TODO: version number should contain output of `git describe --tags --dirty`
manifest {
    homePage = 'https://github.com/nhoffman/dada2-nf'
    description = 'Dada2 pipeline for dereplication, chimera checking, and 16s detection'
    version = '1.0.0'
    name = 'dada2-nf'
}

profiles {

    docker {
        workDir = "work"
        resume = true  // null for no resume
        docker {
            enabled = true
        }
        params {
            output = 'output'
        }
        process {
            container = params.docker_container
            executor = 'local'
        }
        executor{
            queueSize=2
        }
    }

    singularity {
        workDir = "work"
        resume = true  // null for no resume
        singularity {
            enabled = true
            autoMounts = true
        }
        params {
            output = 'output'
        }
        process {
            container = params.singularity_container
            executor = 'local'
        }
        executor{
            queueSize = 8
        }
    }

    uw_batch {
        workDir = 's3://molmicro-data/nextflow-workdir/dada2-nf'
        process {
            scratch = "/docker_scratch"
            queue = 'molmicro-queue'
            executor = 'awsbatch'
            container = params.docker_container

            // allocate resources according to labels; see
            // https://www.nextflow.io/docs/latest/config.html#scope-process
            // https://www.nextflow.io/docs/latest/process.html#label
            withLabel: med_cpu_mem {
                cpus = 8
                memory = { 8.GB * task.attempt }
                errorStrategy = 'retry'
                maxRetries = 3
            }
        }
        aws {
            region = 'us-west-2'
            batch {
                volumes = '/docker_scratch'
                cliPath = '/home/ec2-user/miniconda/bin/aws'
            }
        }
    }

    hutch_batch {
        // choose from delete10, delete30, delete60 numbers refer to days
        workDir = "s3://fh-pi-fredricks-d-nextflow-scratch/delete10/"
        resume = true
        params {
            output = 'output'
        }
        process {
            executor = 'awsbatch'
            container = params.docker_container
            queue = 'default'
            scratch = '/tmp'

            // allocate resources according to labels; see
            // https://www.nextflow.io/docs/latest/config.html#scope-process
            // https://www.nextflow.io/docs/latest/process.html#label
            withLabel: med_cpu_mem {
                cpus = 8
                memory = { 8.GB * task.attempt }
                errorStrategy = 'retry'
                maxRetries = 4
            }

            withLabel: large_cpu_mem {
                cpus = 16
                memory = { 32.GB * task.attempt }
                errorStrategy = 'retry'
                maxRetries = 3
            }

        }
        aws {
            batch {
                // https://github.com/nextflow-io/nextflow/issues/849
                cliPath = '/home/ec2-user/miniconda/bin/aws'
                volumes = '/var/lib/docker'
            }
        }
    }
}
